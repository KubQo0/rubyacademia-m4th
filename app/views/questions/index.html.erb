<% content_for :title, "Questions" %>

<div class="d-flex justify-content-between align-items-center w-100">
  <h1><%= t(".header") %></h1>
  <%= link_to new_question_path, class: 'btn btn-primary' do %>
    <i class="bi bi-plus-lg me-2"></i><%= t(".new") %>
  <% end %>
</div>

<div id="questions">
  <% @questions.each do |question| %>
    <%= link_to question, class: "text-decoration-none text-black" do %>
      <%= render question %>
    <% end %>
  <% end %>
</div>
