<%= fields model: @question do |form| %>
  <%= form.fields_for :categories, child_index: params[:index] do |c_form| %>
    <%= turbo_frame_tag "category_#{c_form.index}" do %>
      <%= c_form.hidden_field :id, value: params[:id] %>
      <%= c_form.hidden_field :_destroy, value: true %>
    <% end %>
  <% end %>
<% end %>